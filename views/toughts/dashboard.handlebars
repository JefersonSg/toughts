<div class="dashboard">
  <div class="title-container">
    <h2>Dashboard</h2>
    <a href="/toughts/add" class="botao-form">Criar Pensamento</a>
  </div>
  <h3>Seus pensamentos</h3>
    <ul>
      {{#each toughts}}
        <li>
          <span class="label">{{this.title}}</span>
          <span class="actions">
            <a href="/" class="btn edit">Editar</a>
            <form action="/toughts/delete" method="post">
            <input class="inputid" type="hidden" name="id" value="{{this.id}}">
            <button type="submit" class="btn">Excluir</button>
            </form>
          </span>
        </li>
      {{/each}}
    </ul>
    {{#if emptyToughts}}
      <p>Ainda não há nenhum pensamento seu, comece a criar <a class="porAqui" href="/toughts/add">por aqui</a></p>
    {{/if}}
</div>