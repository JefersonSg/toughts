<div class="auth-container">
  <h2>Registrar</h2>
  <form action="/auth/register" method="post">
    <div class="form-control">
      <label for="name">Nome:</label>
      <input type="text" name="name" id="name" placeholder="Digite o seu nome" required>
    </div>
    <div class="form-control">
      <label for="email">Email:</label>
      <input type="email" name="email" id="email" placeholder="Digite o seu e-mail" required>
    </div>
    <div class="form-control">
      <label for="password">Senha:</label>
      <input type="password" name="password" id="password" placeholder="Digite a sua senha" required>
    </div>
    <div class="form-control">
      <label for="confirmpassword">Confirme a sua senha:</label>
      <input type="password" name="confirmpassword" id="confirmpassword" placeholder="Digite a sua senha" required>
    </div>
    <div class="container-button">
      <button class="botao-form" type="submit">Cadastrar</button>
    </div>
  </form>
  <p class="entrar">JÃ¡ tem conta? <a href="/auth/login">Clique aqui!</a></p>
</div>